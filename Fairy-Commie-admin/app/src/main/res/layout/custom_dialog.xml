<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_root" android:orientation="vertical"
    android:layout_width="fill_parent" android:layout_height="fill_parent"
    android:padding="10dp"
    android:background="@android:color/darker_gray">

    <TextView android:text="MAC" android:id="@+id/TextView01"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="#ff000000"></TextView>
    <EditText android:id="@+id/mac" android:layout_width="200dip"
        android:layout_height="35dip" android:layout_marginRight="10dp"
        android:hint="enter the mac address"/>

    <TextView android:text="Major" android:id="@+id/TextView02"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="#ff000000"></TextView>
    <EditText android:id="@+id/major" android:layout_width="200dip"
        android:layout_height="35dip" android:textColor="#FFF"
        android:hint="enter the major number" />

    <TextView android:text="Minor" android:id="@+id/TextView03"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="#ff000000"></TextView>
    <EditText android:id="@+id/minor" android:layout_width="200dip"
        android:layout_height="35dip" android:textColor="#FFF"
        android:hint="enter the minor number" />
</LinearLayout>

